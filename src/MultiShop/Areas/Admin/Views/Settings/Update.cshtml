
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using MultiShop.Business.ViewModels


@model SettingsUpdateVM
<div class="card-header">
    <h3 class="card-title">Quick Set</h3>
</div>
<form method="post" enctype="multipart/form-data" asp-action="Update">
<div class="card-body">
 

    <h1>SETIINGS</h1>
    <div class="form-group">
        <label for="exampleInputEmail1">Text</label>
        <input asp-for="Text" class="form-control" id="exampleInputEmail1"  placeholder="Enter text">
        <span asp-validation-for="Text" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input asp-for="Email" class="form-control" id="exampleInputEmail1" placeholder="Enter Email">
        <span asp-validation-for="Email" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Location</label>
        <input asp-for="Location" class="form-control" id="exampleInputEmail1" placeholder="Enter Location">
        <span asp-validation-for="Location" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Phone</label>
        <input asp-for="Phone" class="form-control" id="exampleInputEmail1" placeholder="Enter Phone">
        <span asp-validation-for="Phone" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">FacebookLink</label>
        <input asp-for="FacebookLink" class="form-control" id="exampleInputEmail1" placeholder="Enter FacebookLink">
        <span asp-validation-for="FacebookLink" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">InstagramLink</label>
        <input asp-for="InstagramLink" class="form-control" id="exampleInputEmail1" placeholder="Enter InstagramLink">
        <span asp-validation-for="InstagramLink" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">LinkedinLink</label>
        <input asp-for="LinkedinLink" class="form-control" id="exampleInputEmail1" placeholder="Enter LinkedinLink">
        <span asp-validation-for="LinkedinLink" style="text-align:red;"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">TwitterLink</label>
        <input asp-for="TwitterLink" class="form-control" id="exampleInputEmail1" placeholder="Enter TwitterLink">
        <span asp-validation-for="TwitterLink" style="text-align:red;"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">SiteName</label>
        <input asp-for="SiteName" class="form-control" id="exampleInputEmail1" placeholder="Enter SiteName">
        <span asp-validation-for="SiteName" style="text-align:red;"></span>
    </div>
        <div class="form-group">
            <label for="exampleInputFile" style="display:block;">Existing Site Icon</label>
            <img width="200px" src="~/uploads/@ViewData["SiteIcon"]" />
        </div>
    <div class="form-group">
            <label for="exampleInputFile">New Site Icon</label>
        <div class="input-group">
            <div class="custom-file">
                <input type="file" name="SiteIcon" class="custom-file-input" id="exampleInputFile">
                <label class="custom-file-label" for="exampleInputFile">New Site Icon</label>
            </div>
            <div class="input-group-append">
                <span class="input-group-text">Upload</span>
            </div>
        </div>
    </div>
</div>

<!-- /.card-body -->

<div class="card-footer">
    <button tytype="submit" asp-action="Update" class="btn btn-primary">Update</button>
</div>
</form>

