
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Slider>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">DataTable with default features</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <td>Title</td>
                    <th>Description</th>
                    <th>Created_at</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img width="100px" src="~/uploads/Slide/@item.Image" /></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Created_at</td>
                        <td>
                            <form asp-controller="Slider" asp-action="Delete" asp-route-Id=@item.Id method="post" style="display:inline;">
                                <button class="btn btn-danger" type="submit">delete</button>
                            </form>
                            @*<a asp-action="Update" class="btn btn-info" asp-route-id="@item.Id">update</a>*@
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Image</th>
                    <td>Title</td>
                    <th>Description</th>
                    <th>Created_at</th>
                    <th>Actions</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

